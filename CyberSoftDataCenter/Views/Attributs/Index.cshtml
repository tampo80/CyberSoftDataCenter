@model IEnumerable<CyberSoftDataCenter.Models.Attributs>

@{
    ViewData["Title"] = "Index";
}

<h3>Liste des acc&egrave;s</h3>
<hr />
<p>
    <a asp-action="Create" class="btn btn-primary">Cr&eacute;er un nouveau</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AttributName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th width="60px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AttributName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AttributsID"><span class="glyphicon glyphicon-edit text-info"></span></a> |
                    @*     <a asp-action="Details" asp-route-id="@item.PaysID">Details</a> |*@
                    <a class="" asp-action="Delete" asp-route-id="@item.AttributsID"><span class="glyphicon glyphicon-trash text-danger"> </span></a>

                </td>
            </tr>
        }
    </tbody>
</table>
