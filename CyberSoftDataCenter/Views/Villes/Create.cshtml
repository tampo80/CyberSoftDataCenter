@model CyberSoftDataCenter.Models.Villes

@{
    ViewData["Title"] = "Create";
}

<h2>Nouvelle Ville</h2>

<form asp-action="Create">
    <div class="form-horizontal">
       
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nom" class="col-md-2 control-label"></label>
           <div class="col-md-5">
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Pays" class="col-md-2 control-label"></label>
           <div class="col-md-5">
                <select asp-for="PaysID" class ="form-control" asp-items="ViewBag.PaysID"></select>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <a class="btn btn-default" asp-action="Index">Fermer</a>
                <input type="submit" value="Cr&eacute;er" class="btn btn-info" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
