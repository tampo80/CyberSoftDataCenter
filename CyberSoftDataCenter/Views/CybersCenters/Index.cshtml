@model ReflectionIT.Mvc.Paging.PagingList<CyberSoftDataCenter.Models.CybersCenters>
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging


@{
    ViewData["Title"] = "Index";
}

<h3>Liste des Cybers Centres</h3>

<nav aria-label="Suppliers navigation example">
    @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
</nav>
<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="Recherche"
           value="@Model.RouteValue["Filter"]" />
    <button type="submit" class="btn btn-info">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Recherche
    </button>
</form>
<hr />
<p>
    <a asp-action="Create" class="btn btn-primary">Cr&eacute;er un nouveau</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Villes)
            </th>
            <th width="60px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Villes.Nom)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CybersCentersID"><span class="glyphicon glyphicon-edit text-info"></span></a> |
                    @*     <a asp-action="Details" asp-route-id="@item.PaysID">Details</a> |*@
                    <a class="" asp-action="Delete" asp-route-id="@item.CybersCentersID"><span class="glyphicon glyphicon-trash text-danger"> </span></a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<nav aria-label="Suppliers navigation example">
    <vc:pager paging-list="@Model" />
</nav>