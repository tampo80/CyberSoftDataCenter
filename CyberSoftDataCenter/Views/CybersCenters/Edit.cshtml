@model CyberSoftDataCenter.Models.CybersCenters

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>CybersCenters</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CybersCentersID" />
        <div class="form-group">
            <label asp-for="Nom" class="col-md-2 control-label"></label>
           <div class="col-md-5">
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Tel" class="col-md-2 control-label"></label>
           <div class="col-md-5">
                <input asp-for="Tel" class="form-control" />
                <span asp-validation-for="Tel" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="VillesID" class="control-label col-md-2"></label>
           <div class="col-md-5">
                <select asp-for="VillesID" class="form-control" asp-items="ViewBag.VillesID"></select>
                <span asp-validation-for="VillesID" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <a class="btn btn-default" asp-action="Index">Fermer</a>
                <input type="submit" value="Sauver" class="btn btn-info" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
