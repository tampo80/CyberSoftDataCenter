@model CyberSoftDataCenter.Models.News

@{
    ViewData["Title"] = "Ajouter une news";
}

<h2>Ajouter une news</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>News</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Auteur" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Auteur" class="form-control" />
                <span asp-validation-for="Auteur" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateNews" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DateNews" class="form-control" />
                <span asp-validation-for="DateNews" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Message" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ajouter" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
